@using WebApplication5.Models.ViewModels
@model IndexViewModel


<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Age</td>
                <td>
                    <form method="post" asp-action="ShowUserProducts">
                        <input type="hidden" name="Id" value="@user.Id"/>
                        <input type="submit" value="Show Products" class="btn btn-danger"/>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>